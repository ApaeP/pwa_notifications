<div class="container flex-fill my-4 d-flex flex-column">
  <h1 class="text-center">Log in</h1>
  <div class="flex-fill d-flex flex-column align-items-center justify-content-center">
    <div class="card col-12 col-md-6 col-xl-3 mx-auto">
      <div class="card-body p-4">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
